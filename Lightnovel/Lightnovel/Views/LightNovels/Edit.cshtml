@model LightNovel.Models.Novel

@{
    ViewData["Title"] = "Edit";
    
}

<h1>Edit Novel</h1>

<h4>
    @Html.DisplayFor(Model => Model.Title)
</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NovelId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OriginalLanguage" class="control-label">Original Language</label>
                <input asp-for="OriginalLanguage" class="form-control" />
                <span asp-validation-for="OriginalLanguage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blurb" class="control-label">Description</label>
                <input asp-for="Blurb" class="form-control" />
                <span asp-validation-for="Blurb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookStatus" class="control-label">Book Status</label>
                <input asp-for="BookStatus" class="form-control" />
                <span asp-validation-for="BookStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link" class="control-label"></label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatorId" class="control-label"></label>
                <select asp-for="CreatorId" class="form-control" asp-items="ViewBag.CreatorId"></select>
                <span asp-validation-for="CreatorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComicId" class="control-label"></label>
                <select asp-for="ComicId" class="form-control" asp-items="ViewBag.ComicId"></select>
                <span asp-validation-for="ComicId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RawId" class="control-label"></label>
                <select asp-for="RawId" class="form-control" asp-items="ViewBag.RawId"></select>
                <span asp-validation-for="RawId" class="text-danger"></span>
            </div>
            <div class="form-group" id="submitbutton">
                <input type="submit" value="Save My Edits" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="backbutton">
    <a asp-action="Details" asp-route-id="@Model?.NovelId" class="btn btn-primary">View Novel</a><br>
</div>
<div class="backbutton">
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
